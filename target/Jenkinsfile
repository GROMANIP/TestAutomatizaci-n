pipeline{
    agent {label 'master'}

    stages {
        
        stage('Test') {
            steps {
                dir("target"){
                sh "gradle clean compile test"

                }
            }
        }

        stage('Build application') {
            steps {
                echo "mvn clean install -Dmaven.test.skip-true"
            }
        }

        stage ('Create docker image') {
            steps {
                echo "creando docker"
            }

        }
            
        
    }
}